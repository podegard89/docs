{
  "$schema": "https://openapi.vercel.sh/vercel.json",

  "buildCommand": "NODE_OPTIONS=--max_old_space_size=4096 pnpm build",

  "trailingSlash": true,
  "cleanUrls": true,

  "redirects": [
    {
      "source": "/reference/renderer-reference/",
      "destination": "/en/reference/integrations-reference/"
    },

    {
      "source": "/en/reference/renderer-reference/",
      "destination": "/en/reference/integrations-reference/"
    },

    { "source": "/en/core-concepts/component-hydration/", "destination": "/en/concepts/islands/" },

    { "source": "/core-concepts/component-hydration/", "destination": "/en/concepts/islands/" },

    { "source": "/en/getting-started/quick-start/", "destination": "/en/install/auto/" },

    { "source": "/docs/:path/", "destination": "/:path/" },

    { "source": "/:lang/docs/:path/", "destination": "/:lang/:path/" },

    {
      "source": "/:lang/core-concepts/partial-hydration/",
      "destination": "/:lang/concepts/islands/"
    },

    { "source": "/core-concepts/collections/", "destination": "/en/guides/content-collections/" },

    {
      "source": "/:lang/core-concepts/collections/",
      "destination": "/:lang/guides/content-collections/"
    },

    { "source": "/comparing-astro-vs-other-tools/", "destination": "/en/guides/migrate-to-astro/" },

    {
      "source": "/:lang/comparing-astro-vs-other-tools/",
      "destination": "/:lang/guides/migrate-to-astro/"
    },

    { "source": "/lighthouse/(.*)", "destination": "/en/guides/migrate-to-astro" },

    {
      "source": "/:lang/guides/publish-to-npm/",
      "destination": "/:lang/reference/publish-to-npm/"
    },

    { "source": "/en/guides/debugging/", "destination": "/en/guides/troubleshooting/" },

    { "source": "/en/quick-start/", "destination": "/en/installation/" },

    { "source": "/:lang/concepts/mpa-vs-spa/", "destination": "/:lang/concepts/why-astro/" },

    { "source": "/:lang/deploy/:service/", "destination": "/:lang/guides/deploy/:service/" },

    { "source": "/:lang/guides/deploy/layer-zero/", "destination": "/:lang/guides/deploy/edgio/" },

    {
      "source": "/:lang/guides/client-side-routing/",
      "destination": "/:lang/guides/view-transitions/"
    },

    { "source": "/:lang/guides/assets/", "destination": "/:lang/guides/images/" },

    { "source": "/:lang/guides/integrations-guide/image/", "destination": "/:lang/guides/images/" },

    { "source": "/:lang/migration/0.21.0/", "destination": "/:lang/guides/upgrade-to/v1/" },

    { "source": "/:lang/migrate/", "destination": "/:lang/guides/upgrade-to/v1/" },

    { "source": "/", "destination": "/en/getting-started/" },

    { "source": "/:lang/(.*)/", "destination": "/:lang/404/", "statusCode": 404 }
  ]
}
